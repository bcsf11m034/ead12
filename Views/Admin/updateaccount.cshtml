<script>
    function loadUpdateContent(url){
        $.ajax({
            url: url,
            dataType: "html",
            success: function(response){
                $('#updateContent').html('');
                $('#updateContent').html(response);
                //console.log(response);
            }
        });
    }
</script>
<!-- jQuery -->




