@model MvcApplication1.Models.User

@{
    ViewBag.Title = "updateconfirm";
}
<link href='~/Content/mystyle.css' rel='stylesheet' type='text/css'>

<script>
    function f1() {
        var a = document.getElementById("role").value;
        if (a.toLowerCase() == "teacher") {
           
            return true;
        }
        else if (a.toLowerCase() == "student") {
            
            return true;
        }
        else {
            
            alert("You Entered invalid Role. \n [ Type Teacher or Student]");
            return false;
        }
    }
</script>
    
