		<input type="text" name="fname" value="@Model.fname" required />

        <label style="font-size:30px; color:white; font-weight:bold; text-decoration:underline;font-family:Arial">Last Name : </label>
		<input type="text" name="lname" value="@Model.lname" required />

         <label style="font-size:30px; color:white; font-weight:bold; text-decoration:underline;font-family:Arial">Email : </label>
		<input type="email" name="email" value="@Model.email" required />

         <label style="font-size:30px; color:white; font-weight:bold; text-decoration:underline;font-family:Arial">Role : </label>
		<input id="role" type="text" name="role" value="@Model.Role.name" required />
        
		<input type="submit" name="submit" class="submit action-button" value="Update" />
	
